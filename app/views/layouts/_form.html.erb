<%= simple_form_for @card do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@card.errors.count, "error") %> не позволяют сохратиь эту карточку:</h2>
      <ul>
	<% @card.errors.full_messages.each do |msg| %>
	  <li><%= msg %></li>
	<% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.input :original_text %>
  </p>
  <p>
    <%= f.input :translated_text %>
  </p>
  <p>
   <%= f.button :submit %>
  </p>
<% end %>

<%= link_to "Назад", cards_path %>
