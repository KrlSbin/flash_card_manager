<table class="table">
  <tr>
    <th>Original text</th>
    <th>Translated text</th>
    <th>Review date</th>
    <th></th>
    <th></th>
  </tr>
  <% current_user.cards.each do |card| %>
    <tr>
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td><%= card.review_date.strftime('%d/%m/%Y') %></td>
      <td><%= link_to "Редактировать", edit_card_path(card) %></td>
      <td><%= link_to "Удалить", card_path(card), method: :delete, data: { confirm: "Вы уверены?" } %></td>
    </tr>
  <% end %>
</table>
