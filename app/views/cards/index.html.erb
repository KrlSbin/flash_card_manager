<table class="table">
  <tr>
    <th>Слово/Фраза</th>
    <th>Перевод</th>
    <th>Дата просмотра</th>
    <th></th>
    <th></th>
    <th>Колода</th>
  </tr>
  <% current_user.decks.each do |deck| %>
    <% deck.cards.each do |card| %>
      <tr>
	<td><%= card.original_text %></td>
	<td><%= card.translated_text %></td>
	<td><%= card.review_date.strftime('%d/%m/%Y') %></td>
	<td><%= link_to "Редактировать", edit_deck_card_path(deck, card) %></td>
  	<td><%= link_to "Удалить", deck_card_path(deck, card), 
	                           method: :delete, 
				   data: { confirm: "Вы уверены?" } %></td>
	<td><%= deck.name %></td>
      </tr>
    <% end %>
  <% end %>
</table>
