<h1>New Card</h1>

<%= simple_form_for :card, url: cards_path do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>
      <ul>
	<% @card.errors.full_messages.each do |msg| %>
	  <li><%= msg %></li>
	<% end %>
      </ul>
    </div>
  <% end %>
  <p>
  <%= f.input :original_text %>
  </p>
  <p>
  <%= f.input :translated_text %>
  </p>
  <p>
  <%= f.input :review_date, placeholder: "#{Time.now.strftime("%d/%m/%Y")}", required: false %>
  </p>
  <p>
  <%= f.button :submit, "Add new card" %>
  </p>
<% end %>

<%= link_to 'Back', cards_path %>
